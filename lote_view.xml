<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

	<!-- LOTES -->
        <record id="lotes_tree_view" model="ir.ui.view">
            <field name="name">elote.lote.treeview</field>
            <field name="model">elote.lote</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Lotes">
                        <field name="name"/>
                        <field name="date_start"/>
                        <field name="date_end"/>
                        <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="lotes_view" model="ir.ui.view">
            <field name="name">elote.lote.view</field>
            <field name="model">elote.lote</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Lotes">
		    <header>
			    <field name="state" widget="statusbar" statusbar_colors='{}'/>
		    </header>
                    <sheet string="Lotes">
			    <div class="oe_right oe_button_box" name="buttons">
				    <button type="object" name="catalog_import" class="oe_inline oe_stat_button" icon="fa-download">
				    	<div>Import Catalog</div>
				    </button>
				    <button type="object" name="view_order_ids" class="oe_stat_button" icon="fa-gift">
					    <field name="order_ids_count" widget="statinfo" string="Purchase Orders" help=""/>
				    </button>
				    <button type="object" name="view_supplier_ids" class="oe_stat_button" icon="fa-info">
					    <field name="supplier_ids_count" widget="statinfo" string="Supplier Info" help=""/>
				    </button>
			    </div>
			    <h1>
				<field name="name"/>
			    </h1>
			    <group col="4" colspan="4">
				<field name="date_start"/>
				<field name="date_end"/>
				<field name="sequence_nbr" readonly="1"/>
			    </group>
			    <separator string="Users"/>
				<field name="user_ids">
					<tree string="Users">
						<field name="login" />
						<field name="name" />
					</tree>
				</field>
		</sheet>
		    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>


        <record id="action_lotes_form" model="ir.actions.act_window">
            <field name="name">Lotes</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">elote.lote</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="lotes_tree_view"/>
        </record>

        <menuitem id="menu_elote_lote" name="Lote Admin" parent="purchase.menu_procurement_management_product" 
		sequence="-1" action="action_lotes_form" groups="weblot.group_elote_manager_purchaser"/>
	
    </data>
</openerp>
