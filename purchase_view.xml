<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record model="ir.ui.view" id="view_po_lote_form">
            <field name="name">purchase.order.lote.inherit</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <data>
                        <field name="partner_ref" position="before">
        	                <field name="lote_id"/>
                        </field>
			<field name="product_id" position="replace">
				<field name="product_id" on_change="onchange_product_id(parent.pricelist_id,product_id,0,False,parent.partner_id, parent.date_order,parent.fiscal_position,date_planned,name,False,parent.state,context)" context="{'search_default_elote_id':parent.lote_id, 'search_default_partner_id':parent.partner_id}"/>
			</field>
                </data>
            </field>
        </record>

      
    </data>
</openerp>
